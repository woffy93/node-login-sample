extends layout

block content
    h2.page-header Login
    p Please login below
    form(method = 'post', action = '/login')
        .form-group
            label Username
            input.form-control(name = 'username', type = 'text', placeholder='username')
        .form-group
            label Password
            input.form-control(name = 'password', type = 'password', placeholder='password')

        input.btn.btn-primary(type = 'submit', name = 'submit', value='login')